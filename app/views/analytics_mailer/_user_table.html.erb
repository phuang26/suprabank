<div class="panel panel-danger">
  <div class="panel-heading">
    <h2>New Users</h2>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>E-Mail</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %> </td>
          <td><%= user.email %> </td>
          <td><%= link_to (polymorphic_url(user)), (polymorphic_url(user)) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

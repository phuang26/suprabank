<div class="panel panel-info">
  <div class="panel-heading">
    <h2>New Buffers</h2>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% @buffers.each do |buffer| %>
        <tr>
          <td><%= buffer.name %> </td>
          <td><%= link_to (polymorphic_url(buffer)), (polymorphic_url(buffer)) %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

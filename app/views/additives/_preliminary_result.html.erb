<% if params[:action] == 'pubchem_request' || 'cid_request'%>
<div class="container-flex">
  <div class="row">
    <div class="col-sm-9">
      <%= bootstrap_flash %>
    </div>
  </div>
</div>
<% end %>

<% if @additive  %>
    <div class="container-flex col-md-12" id="preliminary_result">
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="well col-md-9">
          <div class="container col-md-12">
            <div class="row">
              <h4>We found the following additive on
                <%= link_to (image_tag("PubChem.png", size: "150x38")), @additive.pubchem_link, target: :_blank %>
              </h4>
            </div>
            <div class="row">
              <div class="col-md-6">
                <dl>
                  <dt>CID:</dt>
                  <dd>
                    <%= @additive.cid %>
                  </dd>
                  <dt>Molecular Weight:</dt>
                  <dd>
                    <%= @additive.molecular_weight %> g/mol
                  </dd>
                </dl>
              </div>
              <div class="col-md-6">
                <%= image_tag  @additive.preferred_abbreviation , size: "200x200"%>
              </div>
            <p><b>Please verify if this is your desired compound.</b></p>
            <div id="message" ></div>
            <%= hidden_field_tag @additive.id %>
            <button type="button" name="button" class="btn btn-primary" id="reject_button">No (will reject this additive)</button>
            <%= link_to "Yes (will retrieve full record)", pubchem_full_record_additives_path(:cid => @additive.cid), remote: true, class:"btn btn-warning", style:"margin-right: 20px;"%>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>
<script type="text/javascript">
  $(function(){
    $('#reject_button').click(function(){
      $('#preliminary_result').hide()
    });
  });
</script>

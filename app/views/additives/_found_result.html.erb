<% if params[:action] == 'pubchem_request' %>
<div class="container-flex">
  <div class="row">
    <div class="col-sm-9">
      <%= bootstrap_flash %>
    </div>
  </div>
</div>
<% end %>
<% if @additive  %>
<hr>
    <div class="container-flex col-md-12" id="preliminary_result">

            <div class="row">
              <h4>We have found the following additive.
              </h4>
            </div>
            <div class="row">
              <div class="col-md-6">
                <dl>
                  <dt>CID:</dt>
                  <dd>
                    <%= @additive.cid %>
                  </dd>
                  <dt>Molecular Weight:</dt>
                  <dd>
                    <%= @additive.molecular_weight %> g/mol
                  </dd>
                </dl>
              </div>
              <div class="col-md-6">
                <%= image_tag  @additive.png_url , size: "200x200"%>
              </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= link_to "Go to additive", additive_path(@additive), class:"btn btn-default btn-success"%>
            </div>
          </div>



<% end %>

                </span>
                <span class="has-tooltip col-md-1" data-toggle="tooltip" title="<%= Technique.search_by_names('Extraction').first.names[0] %>">
                <label class="radio-inline control-label"  data-toggle="collapse" data-target="#technique_panel" aria-expanded="false" aria-controls="technique_panel"><%= f.radio_button :technique, 'Extraction', class:"technique"%> <%= Technique.search_by_names('Extraction').first.names[1] %>
                </label>
                </span>
                <span class="has-tooltip col-md-1" data-toggle="tooltip" title="<%= Technique.search_by_names('Potentiometry').first.names[0] %>">

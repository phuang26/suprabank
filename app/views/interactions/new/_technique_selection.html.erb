                <label class="radio-inline control-label"  data-toggle="collapse" data-target="#technique_panel" aria-expanded="false" aria-controls="technique_panel"><%= f.radio_button :technique, 'Surface Enhanced Raman Scattering', class:"technique"%> <%= Technique.search_by_names('Surface Enhanced Raman Scattering').first.names[1] %>

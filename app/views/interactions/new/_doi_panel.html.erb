<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Cross Referencing</h3>
  </div>
  <div class="panel-body">
    <p>If available, please provide the DOI of the corresponding manuscript for cross-referencing.</p>
    <div class="col-md-1">
      <%= f.label :doi,"DOI", :class => 'control-label' %>
    </div>
    <div class="col-md-8">
      <%= f.text_field :doi, placeholder: "reference DOI", :class => 'form-control' %>
    </div>
    <%=f.error_span(:doi) %>
  </div>
  <div class="panel-footer" id="doi_panel_footer_provide">
    Please provide a reference DOI when you start the review process.
    Example DOI: 10.1002/anie.199013041
  </div>
  <div class="panel-footer" id="doi_panel_footer_standard">
    Example DOI: 10.1002/anie.199013041
  </div>

</div>

<script type="text/javascript">

  function doi_presence() {
    if (!$('#interaction_doi').val()) {
      $('#interaction_doi').addClass("errorbox");
      $('#doi_panel_footer_provide').show();
      $('#doi_panel_footer_standard').hide();
    } else {
      $('#interaction_doi').removeClass("errorbox");
      $('#doi_panel_footer_provide').hide();
      $('#doi_panel_footer_standard').show();
    }
  };

  $(function () {
    doi_presence();
    $("#interaction_embargo_false").on('click', function () {
      doi_presence()
    });
    $("#interaction_doi").on('change', function () {
      doi_presence()
    });
    $("#interaction_embargo_true").on('click', function () {
      $('#interaction_doi').removeClass("errorbox");
      $('#doi_panel_footer_provide').hide();
      $('#doi_panel_footer_standard').show();
    });
  });

  <!--

  -->
</script>

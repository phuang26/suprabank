<%= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <h4>Please give some information about it.</h4>
<div class="container">

  <%= render 'group_info', f:f %>
  <%= f.button :submit, "Save Group Information", :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
  </div>
<% end %>

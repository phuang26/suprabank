<%- model_class = Group -%>
<div class="page-header">
  <h1>Contributing <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="container">
  <div class="row">
<div class="col-md-12 groups_map_col">




<%= geo_chart Group.group(:country).count, id: "groups_country_map", height:"450px"  %>
  </div>
  </div>
  <div class="table-responsive">
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th>Institution</th>
          <th><%= model_class.human_attribute_name(:department) %></th>
          <th><%= model_class.human_attribute_name(:city) %></th>
          <th><%= model_class.human_attribute_name(:country) %></th>
          <th><%= model_class.human_attribute_name(:website) %></th>
          <!-- <th>Entries</th> -->
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= link_to group.name, group_path(group) %></td>
            <td><%= group.affiliation %></td>
            <td><%= group.department %></td>
            <td><%= group.city %></td>
            <td><%= group.country %></td>
            <td><a href="<%= group.website %>" target="_blank"><%= group.website %></a></td>
            <!-- <td> -->
               <%#= link_to group.group_interactions,'#', class:'badge group_badge', disabled:true%>
             <!-- </td> -->

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

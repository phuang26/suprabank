<div class="container col-md-12 col-xs-12" id='mission'>
  <hr>
  <h2>Mission</h2>
  <div class="row">
    <div class="col-md-12">
      <h4> SupraBank is a curated open resource for intermolecular interactions</h4><br>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-xs-12"></div>
    <div class="col-md-3 col-xs-12">
      <%= link_to datasets_path do %>
        <h4 class="alert alert-success alert-shadow-rectangle visible-xs-block visible-lg-inline visible-md-inline visible-sm-inline-block">
          <i class="fas fa-database"></i> Datasets: <%= Dataset.findable.count %>   
        </h4>
      <% end %>
    </div>
    <div class="col-md-3 col-xs-12">
      <%= link_to interactions_path do %>
        <h4 class="alert alert-info alert-shadow-rectangle visible-xs-block visible-lg-inline visible-md-inline visible-sm-inline-block">
          <i class="fas fa-flask"></i> Interactions: <%= Interaction.published.count %>   
        </h4>
      <% end %>
    </div>
    <div class="col-md-3 col-xs-12">
      <%= link_to molecules_path do %>
        <h4 class="alert alert-warning alert-shadow-rectangle visible-xs-block visible-lg-inline visible-md-inline visible-sm-inline-block">
          <%= image_tag "struc.svg", class:"svg-warning"%> Compounds: <%= Molecule.all.size %>  
        </h4>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-3 col-xs-12">
      <h4><a href="mailto:contact@suprabank.org"  class="external-link">contact@suprabank.org </a></h4>
    </div>
    <div class="col-md-3 col-xs-12">
      <h4><a href="https://www.surveymonkey.de/r/66DZGZS"  target="_blank" rel="noopener noreferrer" class="external-link"> Feedback</a></h4>
    </div>
    <div class="col-md-3 col-xs-12">
      <h4><a href="/about_us" target="_blank" rel="noopener noreferrer" class="external-link"> SupraBank Team </a></h4>
    </div>
  </div>
    
    
    
  </div>
</div>  
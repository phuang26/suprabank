

<div class="col-md-12" >
  <h3 style="margin-top: 30px; margin-bottom: 20 px">PubChem powered search <%= link_to (image_tag("logos/pubchem_logo.svg", size: "150x38")), "https://pubchem.ncbi.nlm.nih.gov/", target: :_blank %> </h3>
</div>

<div class="form-group" id="solvent-lookup">
  <%= form_tag pubchem_request_solvents_path, remote: true, method: :get, id: "solvent-lookup-form" do %>
  <div class="form-group row">
    <div class="col-md-8">
      <%= text_field_tag :solvent, params[:solvent], placeholder: "by Solvent Name or CAS", autofocus: true, class: "form-control search-box" %>
    </div>
    <div class="col-md-1">
      <div id='loader'>
        <%= image_tag "preloader/default_trans.gif", size:"32x32"%>
      </div>
    </div>
    <div class="col-md-3">
      <%= button_tag(type: :submit, class: "btn btn-primary btn-lg search_button", onclick: "showLoader('pubchem')") do %>
        <i class="fa fa-search"></i> Search in PubChem
      <% end %>
    </div>
  </div>


   <div class="form-group row">
     <div class="col-md-9">
     </div>
      <div class="col-md-3">
        <span class="has-tooltip" data-toggle="ajax-tooltip" title="The CID is unambigiuous, unlike the name"><button type="button" name="button" id="cid-button" class="btn btn-default btn-lg search_button ">Use CID Instead</button></span>
      </div>
  </div>

</div>
  <% end %>

  <div class="container-flex" id='results'>
    <%= render 'solvents/result' %>
  </div>

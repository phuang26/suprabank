<% if current_user.groups.present? %>
<li class="dropdown">
  <%= link_to 'My Group', group_path(current_user.groups.first), :data_toggle => "dropdown", :class => "dropdown-toggle"  %>

  <ul class="dropdown_menu" id="group_panel">
    <% for user in current_user.groups.first.users.sort_by{|user| -user.interactions.active.size}.sort_by{|user| user.role} %>
        <li>
            <%= link_to user.full_name, user_path(user) %>
           <%= link_to user.interactions.active.size, {controller: "/users", action: 'interactions', id:user}, class:'badge'%>
        </li>
    <% end %>
  </ul>
</li>
<% end %>

</div>
<div class="container-fluid">
  <div class="row center">
    
    <%= image_tag @framework.png_url, class:'structure-image' %>
    
  </div>
    <hr>
  <div class="row">
  <table class="table table-responsive"> 
    <thead>
      <tr>
        <th>Quantity</th>
        <th>Value</th>
        <th>Unit</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'frameworks/locales/table_rows', framework:@framework %>
    </tbody>  
  </table>
  
  </div>
</div>




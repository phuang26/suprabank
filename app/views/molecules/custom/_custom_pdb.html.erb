      <input type="text" name="pdb_id" id="pdb_id" placeholder="by PDB ID e.g. 4HHB" autofocus="autofocus" class="form-control search-box">
    </div>
    <div class="col-md-1">
      <div id="cidloader", class="loader">
        <%= image_tag "preloader/default_trans.gif", size:"32x32"%>

<p id="notice"><%= notice %></p>
<%= render 'molecule_info' %>
<div class="">
  <%= render 'dblookup' %>
</div>
<div class="col-md-12">
  <hr>
</div>
<div class="col-md-12">
  <div class="form-group row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <%= link_to 'Show all SupraBank molecules', listing_molecules_path, class:"btn btn-default btn-lg search_button" %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-3">
      <% if user_signed_in? %>
        <%= link_to "Not found? Click me!", external_services_molecules_path, remote: true, class:"btn btn-lg btn-primary search_button"%>
      <% end %>
    </div>
  </div>
  <div class="form-group row" id="externalMoleculeResources">
  </div>
</div>
<script type="text/javascript">
  $('button[name=searchMoleculeButton]').on("click", function(){
    hidePopovers();
    $(document).ajaxStop(function () {
      window.scrollTo(0,document.body.scrollHeight);
    });
    if ($.fn.DataTable.isDataTable('#mol-index' )) {
      dataTable.state.clear();
    } else {
      !($('button[name=searchMoleculeButton]').hasClass('.clicked')) | $('button[name=searchMoleculeButton]').addClass('.clicked');
    };
  });
  
  $('button').click(function(){
      $('#message').hide();
    });
</script>

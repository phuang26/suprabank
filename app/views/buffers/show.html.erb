<%- model_class = Buffer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> | <%= @buffer.name %> </h1>
</div>
<div class="container col-md-12 ">
  <div class="row">
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= render 'buffers/locales/solvation', object:@buffer %>
    </div>
    <div class="col-md-4">
      <%= render 'buffers/locales/additives', object:@buffer %>
    </div>
    <div class="col-md-4">
      <%= render 'buffers/locales/properties', object:@buffer %>
    </div>
  </div>
  <div class="row">
    <%= link_to 'Back', 'javascript:history.back()', class:"btn btn-default"  %>
    <% if policy(@buffer).update? %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_buffer_path(@buffer), :class => 'btn btn-default' %>
    <% end %>
    <% if policy(@buffer).destroy? %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    buffer_path(@buffer),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
    <% end %>
  </div>
</div>
